    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag "application", :media => "all" %>
<% end %>

<% content_for :page_title do %>
    <%= Rails.application.config.prototype.site_title %>
<% end %>

<% content_for :navbar_right do %>
    <div><%= link_to "Site Map", proto_pages_path('index') %></div>
<% end %>

